<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky"
    tools:context="fr.leomoldo.android.bunkerwar.GameActivity" >

    <!-- Seebars, indicators and labels (in LinearLayouts). -->
    <LinearLayout
        android:id="@+id/linearLayoutAngle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_UI_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/seekBarAnglePlayerOne"
            android:layout_width="0dp"
            android:layout_weight="@integer/seekBar_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:max="90"
            android:progress="45" >
        </SeekBar>

        <TextView
            android:id="@+id/textViewIndicatorAnglePlayerOne"
            android:layout_width="0dp"
            android:layout_weight="@integer/indicator_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:height="30dp"
            android:text="@string/UI_text_angle_initial_value"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewAngle"
            android:layout_width="0dp"
            android:layout_weight="@integer/textView_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:height="30dp"
            android:text="@string/UI_text_angle"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewIndicatorAnglePlayerTwo"
            android:layout_width="0dp"
            android:layout_weight="@integer/indicator_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:height="30dp"
            android:text="@string/UI_text_angle_initial_value"
            android:textColor="#000000"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBarAnglePlayerTwo"
            android:layout_width="0dp"
            android:layout_weight="@integer/seekBar_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:max="90"
            android:progress="45" >
        </SeekBar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPower"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_UI_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/linearLayoutAngle"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/seekBarPowerPlayerOne"
            android:layout_width="0dp"
            android:layout_weight="@integer/seekBar_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:max="100"
            android:progress="50" >
        </SeekBar>

        <TextView
            android:id="@+id/textViewIndicatorPowerPlayerOne"
            android:layout_width="0dp"
            android:layout_weight="@integer/indicator_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:height="30dp"
            android:text="@string/UI_text_power_initial_value"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewPower"
            android:layout_width="0dp"
            android:layout_weight="@integer/textView_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:height="30dp"
            android:text="@string/UI_text_power"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewIndicatorPowerPlayerTwo"
            android:layout_width="0dp"
            android:layout_weight="@integer/indicator_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:height="30dp"
            android:text="@string/UI_text_power_initial_value"
            android:textColor="#000000"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBarPowerPlayerTwo"
            android:layout_width="0dp"
            android:layout_weight="@integer/seekBar_UI_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/UI_global_margin"
            android:background="#FFFFFF"
            android:max="100"
            android:progress="50" >
        </SeekBar>
    </LinearLayout>

    <!-- Fire buttons. -->

    <Button
        android:id="@+id/buttonFirePlayerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/UI_text_button_fire"
        android:layout_below="@id/linearLayoutPower"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/UI_global_margin"
        android:onClick="onFireButtonClicked"
        android:visibility="visible"></Button>

    <Button
        android:id="@+id/buttonFirePlayerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/UI_text_button_fire"
        android:layout_below="@id/linearLayoutPower"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/UI_global_margin"
        android:onClick="onFireButtonClicked"
        android:visibility="gone"></Button>

    <!-- Landscape Linear Layout. -->

    <LinearLayout
        android:id="@+id/linearLayoutLandscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>